<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="ont-type.xsl"?>
<dsl>
 <provenance name="TRIPS"/>
 <concept name="ont::pos-extended-along-linear-area">
 <comment>
  &quot;FIGURE is located within the linear area (GROUND). e.g., I found it along the street. We walked along the street&quot;
 </comment>
 <relation label="inherit">
  ont::position-wrt-linear-area-reln
 </relation>
 </concept>
 <concept name="ont::root" />
 <concept name="abstr-obj" />
 <concept name="ont::referential-sem">
 <comment>
  &quot;The root type for all things that can be referred to: abstract meaning for THIS and IT&quot;
 </comment>
 <relation label="inherit">
  ont::any-sem
 </relation>
 <relation label="overlap">
  wn::|entity%1:03:00::|
 </relation>
 <or>
  <concept name="phys-obj" />
  <concept name="abstr-obj" />
  <concept name="situation" />
  <concept name="proposition" />
 </or>
 </concept>
 <concept name="ont::position-wrt-linear-area-reln">
 <comment>
  &quot;FIGURE is defined wrt an area (the GROUND) that has a linear orientation&quot;
 </comment>
 <relation label="inherit">
  ont::position-reln
 </relation>
 <sem-frame>
  <role-restr-map roles="ont::ground">
   <sem-feats>
    <relation label="inherit">
     phys-obj
    </relation>
    <feat name="spatial-abstraction">spatial-point</feat>
    <feat name="type">geo-object</feat>
   </sem-feats>
  </role-restr-map>
  <role-restr-map roles="ont::figure">
   <or>
    <concept name="phys-obj" />
    <concept name="situation" />
   </or>
  </role-restr-map>
 </sem-frame>
 </concept>
 <concept name="ont::position-reln">
 <comment>
  &quot;Spatial relations that locate one object (the figure) in terms of another object (the ground), which often is implicit&quot;
 </comment>
 <relation label="inherit">
  ont::abstract-object
 </relation>
 <sem-frame>
  <role-restr-map roles="ont::ground">
   <or>
    <concept name="phys-obj" />
    <concept name="situation" />
    <concept name="abstr-obj" />
   </or>
  </role-restr-map>
  <role-restr-map roles="ont::figure">
   <or>
    <concept name="phys-obj" />
    <concept name="situation" />
    <concept name="abstr-obj" />
   </or>
  </role-restr-map>
 </sem-frame>
 </concept>
 <sem-frame>
 <role-restr-map roles="ont::ground">
  <sem-feats>
   <relation label="inherit">
    phys-obj
   </relation>
   <feat name="spatial-abstraction">spatial-point</feat>
   <feat name="type">geo-object</feat>
  </sem-feats>
 </role-restr-map>
 <role-restr-map roles="ont::figure">
  <or>
   <concept name="phys-obj" />
   <concept name="situation" />
  </or>
 </role-restr-map>
 </sem-frame>
 <concept name="ont::abstract-object">
 <comment>
  &quot;abstract objects, mental constructions, with no physical realization&quot;
 </comment>
 <relation label="overlap">
  wn::|psychological_feature%1:03:00::|
  wn::|abstraction%1:03:00::|
  wn::|abstract_entity%1:03:00::|
 </relation>
 <relation label="inherit">
  ont::referential-sem
  abstr-obj
 </relation>
 </concept>
 <sem-frame>
 <role-restr-map roles="ont::ground">
  <or>
   <concept name="phys-obj" />
   <concept name="situation" />
   <concept name="abstr-obj" />
  </or>
 </role-restr-map>
 <role-restr-map roles="ont::figure">
  <or>
   <concept name="phys-obj" />
   <concept name="situation" />
   <concept name="abstr-obj" />
  </or>
 </role-restr-map>
 </sem-frame>
 <concept name="ont::any-sem">
 <relation label="inherit">
  ont::root
 </relation>
 </concept>
 <or>
 <concept name="phys-obj" />
 <concept name="abstr-obj" />
 <concept name="situation" />
 <concept name="proposition" />
 </or>
 <sense>
 <morph>
  <pos pos="adv" />
  <word first-word="along" />
 </morph>
 <example text="he found it along the road">
  <provenance name="TRIPS"/>
 </example>
 <relation label="inherit">
  ont::pos-extended-along-linear-area
 </relation>
 <syntax>
  <template-call template="ont::binary-constraint-np-templ" />
  <syn-sem>
   <syn-sem-map syn-arg="subcat" syn-cat="np" sem-role="ont::ground"/>
   <syn-sem-map syn-arg="argument" syn-cat="np" sem-role="ont::figure"/>
  </syn-sem>
  <syn-feats>
   <feat name="atype">
   <or>
    post
    pre
    pre-vp
   </or>
   </feat>
   <feat name="sort">binary-constraint</feat>
  </syn-feats>
 </syntax>
 </sense>
 <sense>
 <morph>
  <pos pos="adv" />
  <word first-word="alongside" />
 </morph>
 <example text="he found it alongside the road">
  <provenance name="TRIPS"/>
 </example>
 <relation label="inherit">
  ont::pos-extended-along-linear-area
  ont::binary-constraint-templ
 </relation>
 </sense>
 <sense>
 <morph>
  <pos pos="adv" />
  <word first-word="alongside" remaining-words="of" />
 </morph>
 <example text="he found it alongside of the road">
  <provenance name="TRIPS"/>
 </example>
 <relation label="inherit">
  ont::pos-extended-along-linear-area
  ont::binary-constraint-templ
 </relation>
 </sense>
</dsl>
