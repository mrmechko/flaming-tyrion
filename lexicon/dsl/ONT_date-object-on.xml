<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="ont-type.xsl"?>
<dsl>
 <provenance name="TRIPS"/>
 <concept name="ont::date-object-on">
 <comment>
  &quot;date objects that use ON - e.g., on Monday, on my birthday&quot;
 </comment>
 <relation label="inherit">
  ont::time-object
 </relation>
 </concept>
 <concept name="time" />
 <concept name="ont::root" />
 <concept name="ont::time-object">
 <comment>
  &quot;objects that refer to temporal locations in some way&quot;
 </comment>
 <relation label="inherit">
  ont::any-time-object
 </relation>
 <sem-frame>
  <role-restr-map roles="ont::figure" optional="optional">
   <concept name="t" />
  </role-restr-map>
 </sem-frame>
 </concept>
 <concept name="ont::any-time-object">
 <relation label="inherit">
  ont::any-sem
 </relation>
 <sem-feats>
  <relation label="inherit">
   time
  </relation>
  <feat name="scale">time-loc-scale</feat>
  <feat name="time-function">any-time-function</feat>
  <feat name="type">any-time-object</feat>
 </sem-feats>
 </concept>
 <sem-frame>
 <role-restr-map roles="ont::figure" optional="optional">
  <concept name="t" />
 </role-restr-map>
 </sem-frame>
 <concept name="ont::any-sem">
 <relation label="inherit">
  ont::root
 </relation>
 </concept>
 <sem-feats>
 <relation label="inherit">
  time
 </relation>
 <feat name="scale">time-loc-scale</feat>
 <feat name="time-function">any-time-function</feat>
 <feat name="type">any-time-object</feat>
 </sem-feats>
 <concept name="ont::day-name">
 <relation label="inherit">
  ont::date-object-on
 </relation>
 <relation label="overlap">
  wn::|calendar_day%1:28:00::|
 </relation>
 <sem-feats>
  <relation label="inherit">
   time
  </relation>
  <feat name="time-function">day-of-week</feat>
  <feat name="type">day-name</feat>
 </sem-feats>
 <sem-frame>
  <role-restr-map roles="ont::ground" optional="optional">
   <concept name="t" />
  </role-restr-map>
  <role-restr-map roles="ont::figure" optional="optional">
   <or>
    <concept name="situation" />
    <concept name="abstr-obj" />
   </or>
  </role-restr-map>
 </sem-frame>
 </concept>
 <concept name="ont::recurring-event">
 <comment>
  &quot;events that recur every year (or some time interval)&quot;
 </comment>
 <relation label="inherit">
  ont::date-object-on
 </relation>
 <relation label="overlap">
  wn::|day%1:28:01::|
  wn::|season%1:28:01::|
  wn::|season%1:28:02::|
 </relation>
 </concept>
</dsl>
