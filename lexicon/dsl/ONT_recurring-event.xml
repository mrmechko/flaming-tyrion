<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="ont-type.xsl"?>
<dsl>
 <provenance name="TRIPS"/>
 <concept name="ont::recurring-event">
 <comment>
  &quot;events that recur every year (or some time interval)&quot;
 </comment>
 <relation label="inherit">
  ont::date-object-on
 </relation>
 <relation label="overlap">
  wn::|day%1:28:01::|
  wn::|season%1:28:01::|
  wn::|season%1:28:02::|
 </relation>
 </concept>
 <concept name="time" />
 <concept name="ont::root" />
 <concept name="ont::date-object-on">
 <comment>
  &quot;date objects that use ON - e.g., on Monday, on my birthday&quot;
 </comment>
 <relation label="inherit">
  ont::time-object
 </relation>
 </concept>
 <concept name="ont::time-object">
 <comment>
  &quot;objects that refer to temporal locations in some way&quot;
 </comment>
 <relation label="inherit">
  ont::any-time-object
 </relation>
 <sem-frame>
  <role-restr-map roles="ont::figure" optional="optional">
   <concept name="t" />
  </role-restr-map>
 </sem-frame>
 </concept>
 <concept name="ont::any-time-object">
 <relation label="inherit">
  ont::any-sem
 </relation>
 <sem-feats>
  <relation label="inherit">
   time
  </relation>
  <feat name="scale">ont::time-loc-scale</feat>
  <feat name="time-function">any-time-function</feat>
  <feat name="type">ont::any-time-object</feat>
 </sem-feats>
 </concept>
 <sem-frame>
 <role-restr-map roles="ont::figure" optional="optional">
  <concept name="t" />
 </role-restr-map>
 </sem-frame>
 <concept name="ont::any-sem">
 <relation label="inherit">
  ont::root
 </relation>
 </concept>
 <sem-feats>
 <relation label="inherit">
  time
 </relation>
 <feat name="scale">ont::time-loc-scale</feat>
 <feat name="time-function">any-time-function</feat>
 <feat name="type">ont::any-time-object</feat>
 </sem-feats>
 <concept name="ont::holiday">
 <comment>
  &quot;recurring events based on religious or social activities&quot;
 </comment>
 <relation label="inherit">
  ont::recurring-event
 </relation>
 <relation label="overlap">
  wn::|leisure%1:28:00::|
 </relation>
 </concept>
 <sense>
 <morph>
  <pos pos="n" />
  <word first-word="anniversary" />
 </morph>
 <relation label="inherit">
  ont::recurring-event
  ont::count-pred-templ
 </relation>
 </sense>
 <sense>
 <morph>
  <pos pos="n" />
  <word first-word="birthday" />
 </morph>
 <example text="add a birthday to the calendar">
  <provenance name="TRIPS"/>
 </example>
 <relation label="inherit">
  ont::recurring-event
  ont::count-pred-templ
 </relation>
 </sense>
</dsl>
