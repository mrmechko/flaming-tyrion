<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="ont-type.xsl"?>
<dsl>
 <provenance name="TRIPS"/>
 <concept name="ont::direction-down-ground">
 <comment>
  &quot;this is the transitive 'down' that has a GROUND that describes a physical object and locations objects or events&quot;
 </comment>
 <relation label="inherit">
  ont::direction-wrt-verticality
 </relation>
 <sem-frame>
  <role-restr-map roles="ont::ground">
   <concept name="phys-obj" />
  </role-restr-map>
  <role-restr-map roles="ont::figure">
   <or>
    <concept name="phys-obj" />
    <concept name="situation" />
   </or>
  </role-restr-map>
 </sem-frame>
 </concept>
 <concept name="ont::root" />
 <concept name="abstr-obj" />
 <concept name="ont::referential-sem">
 <comment>
  &quot;The root type for all things that can be referred to: abstract meaning for THIS and IT&quot;
 </comment>
 <relation label="inherit">
  ont::any-sem
 </relation>
 <relation label="overlap">
  wn::|entity%1:03:00::|
 </relation>
 <or>
  <concept name="phys-obj" />
  <concept name="abstr-obj" />
  <concept name="situation" />
  <concept name="proposition" />
 </or>
 </concept>
 <sem-frame>
 <role-restr-map roles="ont::norole" optional="optional">
  <concept name="t" />
 </role-restr-map>
 <role-restr-map roles="ont::ground">
  <concept name="phys-obj" />
 </role-restr-map>
 <role-restr-map roles="ont::figure">
  <sem-feats>
   <or>
    <concept name="phys-obj" />
    <concept name="abstr-obj" />
    <concept name="situation" />
   </or>
   <feat name="mobility">movable</feat>
  </sem-feats>
 </role-restr-map>
 </sem-frame>
 <concept name="ont::position-reln">
 <comment>
  &quot;Spatial relations that locate one object (the figure) in terms of another object (the ground), which often is implicit&quot;
 </comment>
 <relation label="inherit">
  ont::abstract-object
 </relation>
 <sem-frame>
  <role-restr-map roles="ont::ground">
   <or>
    <concept name="phys-obj" />
    <concept name="situation" />
    <concept name="abstr-obj" />
   </or>
  </role-restr-map>
  <role-restr-map roles="ont::figure">
   <or>
    <concept name="phys-obj" />
    <concept name="situation" />
    <concept name="abstr-obj" />
   </or>
  </role-restr-map>
 </sem-frame>
 </concept>
 <concept name="ont::direction-wrt-verticality">
 <comment>
  &quot;direction wrt respect to verticality (e.g., gravity or a 'vertical' scale, e.g., temperature), possibly also related to a extended object, e.g., a street, a body, which is the GROUND&quot;
 </comment>
 <relation label="inherit">
  ont::direction
 </relation>
 </concept>
 <sem-frame>
 <role-restr-map roles="ont::ground">
  <concept name="phys-obj" />
 </role-restr-map>
 <role-restr-map roles="ont::figure">
  <or>
   <concept name="phys-obj" />
   <concept name="situation" />
  </or>
 </role-restr-map>
 </sem-frame>
 <concept name="ont::direction">
 <comment>
  &quot;a direction = a spatial relation between the location (FIGURE) of an object and its previous location&quot;
 </comment>
 <relation label="inherit">
  ont::position-reln
 </relation>
 <sem-frame>
  <role-restr-map roles="ont::norole" optional="optional">
   <concept name="t" />
  </role-restr-map>
  <role-restr-map roles="ont::ground">
   <concept name="phys-obj" />
  </role-restr-map>
  <role-restr-map roles="ont::figure">
   <sem-feats>
    <or>
     <concept name="phys-obj" />
     <concept name="abstr-obj" />
     <concept name="situation" />
    </or>
    <feat name="mobility">movable</feat>
   </sem-feats>
  </role-restr-map>
 </sem-frame>
 </concept>
 <concept name="ont::abstract-object">
 <comment>
  &quot;abstract objects, mental constructions, with no physical realization&quot;
 </comment>
 <relation label="overlap">
  wn::|psychological_feature%1:03:00::|
  wn::|abstraction%1:03:00::|
  wn::|abstract_entity%1:03:00::|
 </relation>
 <relation label="inherit">
  ont::referential-sem
  abstr-obj
 </relation>
 </concept>
 <sem-frame>
 <role-restr-map roles="ont::ground">
  <or>
   <concept name="phys-obj" />
   <concept name="situation" />
   <concept name="abstr-obj" />
  </or>
 </role-restr-map>
 <role-restr-map roles="ont::figure">
  <or>
   <concept name="phys-obj" />
   <concept name="situation" />
   <concept name="abstr-obj" />
  </or>
 </role-restr-map>
 </sem-frame>
 <concept name="ont::any-sem">
 <relation label="inherit">
  ont::root
 </relation>
 </concept>
 <or>
 <concept name="phys-obj" />
 <concept name="abstr-obj" />
 <concept name="situation" />
 <concept name="proposition" />
 </or>
 <sense>
 <morph>
  <pos pos="adv" />
  <word first-word="down" />
 </morph>
 <provenance name="TRIPS">
  <provenance name="BASE500"/>
 </provenance>
 <example text="he walked down the road/ down the wall">
 </example>
 <relation label="inherit">
  ont::direction-down-ground
 </relation>
 <syntax>
  <template-call template="ont::binary-constraint-np-templ" />
  <syn-sem>
   <syn-sem-map syn-arg="subcat" syn-cat="np" sem-role="ont::ground"/>
   <syn-sem-map syn-arg="argument" syn-cat="np" sem-role="ont::figure"/>
  </syn-sem>
  <syn-feats>
   <feat name="atype">
   <or>
    post
    pre
    pre-vp
   </or>
   </feat>
   <feat name="sort">binary-constraint</feat>
  </syn-feats>
 </syntax>
 </sense>
 <sense>
 <morph>
  <pos pos="adv" />
  <word first-word="downstream" />
 </morph>
 <relation label="inherit">
  ont::direction-down-ground
  ont::pred-s-post-templ
 </relation>
 </sense>
 <sense>
 <morph>
  <pos pos="adj" />
  <word first-word="downstream" />
 </morph>
 <example text="The box downstream of that.">
  <provenance name="TRIPS"/>
 </example>
 <relation label="inherit">
  ont::direction-down-ground
 </relation>
 <syntax>
  <template-call template="ont::adj-co-theme-templ" xp="'(w::pp
                                                          (w::or
                                                            w::of
                                                            w::from))" />
  <syn-sem>
   <syn-sem-map syn-arg="subcat2" syn-cat="-" sem-role="ont::norole"/>
   <syn-sem-map syn-arg="subcat" syn-cat="pp" head-word="(w::or
                                                           w::of
                                                           w::from)" sem-role="ont::ground" optional="optional"/>
   <syn-sem-map syn-arg="argument" syn-cat="np" sem-role="ont::figure"/>
  </syn-sem>
  <syn-feats>
   <feat name="atype">central</feat>
   <feat name="sort">pred</feat>
  </syn-feats>
 </syntax>
 </sense>
</dsl>
